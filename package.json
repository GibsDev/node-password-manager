{
	"name": "password-manager",
	"version": "1.0.0",
	"description": "A NodeJS password manager server",
	"main": "./core/server.js",
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"start:dev": "concurrently -n \"webpack,server\" \"cross-env NODE_ENV=development webpack\" \"cross-env NODE_ENV=development nodemon ./core/server.js\"",
		"start:dev:https": "concurrently -n \"webpack,server\" \"cross-env NODE_ENV=development webpack\" \"cross-env NODE_ENV=development nodemon ./core/server.js --https\"",
		"start:dev:noauth": "concurrently -n \"webpack,server\" \"cross-env NODE_ENV=development webpack\" \"cross-env NODE_ENV=development nodemon ./core/server.js --noauth\"",
		"start": "pm2 start ./core/server.js",
		"stop": "pm2 stop server && pm2 delete server",
		"start:https": "node ./core/server.js --https"
	},
	"author": "GibsDev",
	"license": "MIT",
	"dependencies": {
		"cookie-parser": "^1.4.5",
		"express": "^4.17.1",
		"jsonfile": "^6.1.0",
		"jsonwebtoken": "^8.5.1",
		"pm2": "^4.5.4",
		"prompt": "^1.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/core": "^7.12.10",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"babel-loader": "^8.2.2",
		"bootstrap": "^4.6.0",
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.0.1",
		"eslint": "^7.18.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"file-loader": "^6.2.0",
		"jquery": "^3.5.1",
		"mini-css-extract-plugin": "^1.3.5",
		"nodemon": "^2.0.7",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"resolve-url-loader": "^3.1.2",
		"sass": "^1.32.5",
		"sass-loader": "^10.1.1",
		"webpack": "^5.18.0",
		"webpack-cli": "^4.4.0"
	},
	"nodemonConfig": {
		"ignore": [
			"public/*",
			"database/*",
			"utilities/*"
		]
	}
}
